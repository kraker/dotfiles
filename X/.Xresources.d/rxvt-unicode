URxvt*.shading: 		30	! 0-99 darkens 101-200 lightens

! Font
URxvt.font: 			xft:Monospace:size=12
URxvt.intensityStyles:		true

! Formatting
URxvt.lineSpace: 		1
URxvt.internalBorder: 		5

! Highlighting
